AC_PREREQ(2.61)

# package version number (not shared library version)
# odd micro numbers indicate in-progress development
# even micro numbers indicate released versions
m4_define(UartTest_version_major, 0)
m4_define(UartTest_version_minor, 1)
m4_define(UartTest_version_micro, 0)

m4_define([UartTest_version],
          [UartTest_version_major.UartTest_version_minor.UartTest_version_micro])
m4_define([UartTest_api_version],
          [UartTest_version_major.UartTest_version_minor])

AC_INIT(UartTest, UartTest_version)
AM_INIT_AUTOMAKE(UartTest, UartTest_version)
AC_CONFIG_HEADERS(config.h)

# Checks for programs.
AC_PROG_LIBTOOL
AM_PROG_CC_C_O
AC_PROG_INSTALL

AC_SUBST(UartTest_CFLAGS)
AC_SUBST(UartTest_LIBS)

AC_OUTPUT([
Makefile
src/Makefile
])

echo ""
echo "   UartTest $VERSION"
echo "   ====================="
echo ""
echo "   To build the project, run \"make\""
echo ""
